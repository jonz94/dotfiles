#!/bin/bash

if [[ "$(uname)" != "Linux" ]]; then
  echo -e "${RED}This installer only support Linux.${NORMAL}"
  exit 1
fi

rm -fr "/tmp/nvim-linux64.tar.gz" "/tmp/nvim-osx64" "${HOME}/.local/opt/neovim-nightly"

curl -L "https://github.com/neovim/neovim/releases/download/nightly/nvim-linux64.tar.gz" -o "/tmp/nvim-linux64.tar.gz"

tar xf "/tmp/nvim-linux64.tar.gz" --directory=/tmp

mkdir -p "${HOME}/.local/bin" "${HOME}/.local/opt"

mv "/tmp/nvim-linux64" "${HOME}/.local/opt/neovim-nightly"

ln -sf "${HOME}/.local/opt/neovim-nightly/bin/nvim" "${HOME}/.local/bin/nvim"
